<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".schedule.ScheduleFragment">

    <Button
        android:id="@+id/btnDeleteRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar fila"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAddRow"
        android:layout_marginTop="10dp"
        android:backgroundTint="#222E50"/>

    <Button
        android:id="@+id/btnAddRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar fila"
        app:layout_constraintTop_toTopOf="@+id/btnDeleteRow"
        app:layout_constraintStart_toEndOf="@id/btnDeleteRow"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#222E50"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnDeleteRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </HorizontalScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>
